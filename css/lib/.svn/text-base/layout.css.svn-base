Last update:	08-05-08

/* Body
/////////////////////////////////////////////////////////////////*/
body					{ background: #181818 url('../../img/body_bg.png') fixed top repeat-x;}
/* Container
/////////////////////////////////////////////////////////////////*/
#container		{ width: 860px; margin: 0 auto; background: #181818;}
.kapitel			{ padding: 100px 0;}
/* Header
/////////////////////////////////////////////////////////////////*/
#header				{ height: 80px; background: url('../../img/header_bg.png') repeat-x; position: fixed; top: 0; width: 860px;}
#header h1		{ text-indent: -999px; height: 59px; width: 400px; background: url('../../img/header_h1.png') no-repeat}
/* Lead
/////////////////////////////////////////////////////////////////*/
#lead					{ width: 200px; position: fixed; top: 340px; color: #555;}
#lead:hover		{ }
#lead h3			{ color: #555; font-size: 1em; font-weight: normal; text-transform: uppercase;}
#lead a				{ color: #555;}
#lead a:hover	{ color: #888;}
/* Navigation
/////////////////////////////////////////////////////////////////*/
#navigation		{ width: 200px; position: fixed; top: 100px;}
#navigation ul{ list-style: none;}
#navigation ul li a	{ display: block; width: 155px; height: 25px; margin-bottom: 10px; text-indent: -999px;
	filter:alpha(opacity=30);
	-moz-opacity:0.3;
	-khtml-opacity: 0.3;
	opacity: 0.3;
}
#navigation ul li a:hover	{
	filter:alpha(opacity=75);
	-moz-opacity:0.75;
	-khtml-opacity: 0.75;
	opacity: 0.75;
}
#navigation ul li ul			{ margin-left: 4px;}
#navigation ul li ul li a	{ display: block; width: 8px; height: 16px; background: #fff; float: left; margin-right: 2px;}
#navigation #a			{background: url('../../img/a_bg.png');}
#navigation #k			{background: url('../../img/k_bg.png');}
#navigation #v			{background: url('../../img/v_bg.png');}
#navigation #sc			{background: url('../../img/sc_bg.png');}
#navigation #ss			{background: url('../../img/s_bg.png');}
/* Content
/////////////////////////////////////////////////////////////////*/
#content			{ width: 600px; margin-left: 260px;}
#content h2		{ text-indent: -999px;}
h2#a_h				{ background: url('../../img/a_bg.png') no-repeat;}
h2#k_h				{ background: url('../../img/k_bg.png') no-repeat;}
h2#v_h				{ background: url('../../img/v_bg.png') no-repeat;}
h2#s_h				{ background: url('../../img/s_bg.png') no-repeat;}
h2#sc_h				{ background: url('../../img/sc_bg.png') no-repeat;}
#content #screenshots div	{ padding-top: 80px; margin-top: -80px;}
/* Footer
/////////////////////////////////////////////////////////////////*/
#footer				{ width: 100%; height: 28px; padding-top: 50px; position: fixed; bottom: 0; background: url('../../img/footer_bg.png') repeat-x ;}
#footer div		{ width: 860px; margin: 0 auto;}